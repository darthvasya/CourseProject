@model LoginModel

@section Scripts{
    <script asp-src-include="~/js/JqueryValidation/*.min.js"></script>
}

<h1>Вход</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Login">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Email"></label>
        <div><span asp-validation-for="Email" class="text-danger"></span></div>
        <input asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <div><span asp-validation-for="Password" class="text-danger"></span></div>
        <input asp-for="Password" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-sm btn-primary">Войти</button>
    <a class="btn btn-danger fa fa-google" asp-action="ExternalLogin" asp-route-returnUrl="/" asp-route-authType="Google"> Войти через Google</a>
    <a class="btn btn-primary fa fa-vk" asp-action="ExternalLogin" asp-route-returnUrl="/" asp-route-authType="Vkontakte"> Войти через Вконтакте</a>
    <a class="btn btn-primary fa fa-vk" asp-action="ExternalLogin" asp-route-returnUrl="/" asp-route-authType="Facebook"> Войти через Вконтакте</a>
    <a asp-action="index" asp-controller="home" class="btn btn-sm btn-default">Отмена</a>
</form>